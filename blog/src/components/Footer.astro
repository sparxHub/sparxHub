<style>
	footer {
		padding: 2em 1em 4em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
		font-size: 0.9em;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin-top: 1em;
	}

	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
		transition: color 0.3s ease-in-out;
	}

	.social-links a:hover {
		color: var(--accent);
	}

	/* Mobile Adjustments */
	@media (max-width: 768px) {
		footer {
			padding: 2em 1em;
			font-size: 0.85em;
		}

		.social-links {
			gap: 1em;
		}

		.social-links a svg {
			width: 28px;
			height: 28px;
		}
	}
</style>
